[alias]
  st = !git fetch && git status
  co = checkout
  aa = !"git add -A; git ls-files --deleted -z | xargs -0 rm -f"
  cm = commit -v
  cs = commit -S -v
  br = branch
  ba = branch --all
  nb = checkout -b
  mg = merge --no-ff
  df = diff HEAD
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all --decorate
  undo = reset --soft HEAD^
  cmm = !"git add -A; git ls-files --deleted -z | xargs -0 rm -f; git commit -s -m"
  csm = !"git add -A; git ls-files --deleted -z | xargs -0 rm -f; git commit -S -v -m"
  wip = !"git add -A; git ls-files --deleted -z | xargs -0 rm -f; git commit -m \"WIP\""
  unwip = !"git log -n 1 | grep -q -c WIP && git reset HEAD~1"
  deploy = "!do_deploy(){ git checkout $2 && git merge $1 && git push $2 && git checkout ${1#refs/heads/}; }; do_deploy $(git symbolic-ref HEAD) ${1:-master}"

[core]
  autocrlf = false
  excludesfile = /Users/vlad/.gitignore.global
  pager = less

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  grep = auto

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[push]
  default = tracking

[include]
  path = ~/.gitconfig.private

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
